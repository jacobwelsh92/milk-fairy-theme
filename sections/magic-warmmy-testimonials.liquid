{% comment %}
  Social Proof - Real Stories from Real Mums
  Building trust through authentic testimonials
{% endcomment %}

<style>
  .warmmy-testimonials {
    padding: 80px 0;
    background: #fff;
    overflow: hidden;
  }
  
  .warmmy-testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .warmmy-testimonials-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .warmmy-testimonials-badge {
    display: inline-block;
    background: #f5b2b9;
    color: white;
    padding: 6px 20px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
  }
  
  .warmmy-testimonials-title {
    font-family: 'Playfair Display', serif;
    font-size: 42px;
    color: #191004;
    margin-bottom: 20px;
    line-height: 1.2;
  }
  
  .warmmy-testimonials-subtitle {
    font-size: 18px;
    color: #3d2522;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .warmmy-testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 50px;
  }
  
  .warmmy-testimonial {
    background: white;
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    position: relative;
    transition: transform 0.3s ease;
  }
  
  .warmmy-testimonial:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 50px rgba(0,0,0,0.12);
  }
  
  .warmmy-testimonial-stars {
    display: flex;
    gap: 2px;
    margin-bottom: 15px;
  }
  
  .warmmy-testimonial-stars svg {
    width: 16px;
    height: 16px;
    fill: #fcc97e;
  }
  
  .warmmy-testimonial-text {
    font-size: 16px;
    line-height: 1.6;
    color: #191004;
    margin-bottom: 20px;
  }
  
  .warmmy-testimonial-text strong {
    color: #f5b2b9;
    font-weight: 600;
  }
  
  .warmmy-testimonial-author {
    display: flex;
    align-items: center;
    gap: 15px;
    padding-top: 20px;
    border-top: 1px solid #f0f0f0;
  }
  
  .warmmy-testimonial-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  .warmmy-testimonial-info {
    flex: 1;
  }
  
  .warmmy-testimonial-name {
    font-weight: 600;
    color: #191004;
    margin-bottom: 2px;
  }
  
  .warmmy-testimonial-meta {
    font-size: 13px;
    color: #717171;
  }
  
  .warmmy-testimonial-verified {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    background: #e8f5e9;
    color: #4CAF50;
    padding: 2px 8px;
    border-radius: 10px;
    font-size: 11px;
    font-weight: 600;
  }
  
  .warmmy-testimonial-verified svg {
    width: 12px;
    height: 12px;
    fill: #4CAF50;
  }
  
  .warmmy-featured-review {
    background: linear-gradient(135deg, #fff7e2 0%, #fff 100%);
    border: 2px solid #f5b2b9;
    padding: 40px;
    border-radius: 20px;
    margin-bottom: 60px;
    position: relative;
  }
  
  .warmmy-featured-badge {
    position: absolute;
    top: -15px;
    left: 30px;
    background: #f5b2b9;
    color: white;
    padding: 5px 15px;
    border-radius: 15px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
  }
  
  .warmmy-featured-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 40px;
    align-items: center;
  }
  
  .warmmy-featured-image {
    width: 100%;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }
  
  .warmmy-featured-text {
    font-size: 20px;
    line-height: 1.6;
    color: #191004;
    margin-bottom: 25px;
    font-style: italic;
  }
  
  @media (max-width: 768px) {
    .warmmy-testimonials {
      padding: 60px 0;
    }
    
    .warmmy-testimonials-title {
      font-size: 32px;
    }
    
    .warmmy-testimonials-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    
    .warmmy-featured-content {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
</style>

