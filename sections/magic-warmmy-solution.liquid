{% comment %}
  The Solution - Show How Magic Warmmy Works
  Visual demonstration with clear benefits
{% endcomment %}

<style>
  .warmmy-solution {
    padding: 80px 0;
    background: linear-gradient(180deg, #fff 0%, #fff7e2 100%);
    position: relative;
    overflow: hidden;
  }
  
  .warmmy-solution::before {
    content: '';
    position: absolute;
    top: 50%;
    left: -100px;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(245,178,185,0.1) 0%, transparent 70%);
    border-radius: 50%;
  }
  
  .warmmy-solution-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .warmmy-solution-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .warmmy-solution-badge {
    display: inline-block;
    background: #f5b2b9;
    color: white;
    padding: 6px 20px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
  }
  
  .warmmy-solution-title {
    font-family: 'Playfair Display', serif;
    font-size: 42px;
    color: #191004;
    margin-bottom: 20px;
    line-height: 1.2;
  }
  
  .warmmy-solution-subtitle {
    font-size: 18px;
    color: #3d2522;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .warmmy-demo {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 80px;
  }
  
  .warmmy-demo-video {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0,0,0,0.15);
  }
  
  .warmmy-demo-video video {
    width: 100%;
    display: block;
  }
  
  .warmmy-demo-play {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80px;
    height: 80px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.3s ease;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  }
  
  .warmmy-demo-play:hover {
    transform: translate(-50%, -50%) scale(1.1);
  }
  
  .warmmy-demo-play svg {
    width: 30px;
    height: 30px;
    fill: #f5b2b9;
    margin-left: 5px;
  }
  
  .warmmy-demo-content {
    padding: 20px;
  }
  
  .warmmy-steps {
    margin-bottom: 40px;
  }
  
  .warmmy-step {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    margin-bottom: 30px;
    padding: 20px;
    background: white;
    border-radius: 15px;
    transition: all 0.3s ease;
  }
  
  .warmmy-step:hover {
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    transform: translateX(10px);
  }
  
  .warmmy-step-number {
    width: 40px;
    height: 40px;
    background: #f5b2b9;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
  }
  
  .warmmy-step-content {
    flex: 1;
  }
  
  .warmmy-step-title {
    font-size: 18px;
    font-weight: 600;
    color: #191004;
    margin-bottom: 5px;
  }
  
  .warmmy-step-text {
    font-size: 14px;
    color: #3d2522;
    line-height: 1.5;
  }
  
  .warmmy-step-time {
    display: inline-block;
    background: #fff7e2;
    padding: 2px 8px;
    border-radius: 10px;
    font-size: 12px;
    color: #f5b2b9;
    font-weight: 600;
    margin-left: 10px;
  }
  
  .warmmy-features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
    margin-bottom: 60px;
  }
  
  .warmmy-feature {
    text-align: center;
    padding: 30px 20px;
    background: white;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    transition: transform 0.3s ease;
  }
  
  .warmmy-feature:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.1);
  }
  
  .warmmy-feature-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f5b2b9 0%, #ffc4ca 100%);
    border-radius: 50%;
  }
  
  .warmmy-feature-icon svg {
    width: 30px;
    height: 30px;
    fill: white;
  }
  
  .warmmy-feature-title {
    font-size: 16px;
    font-weight: 600;
    color: #191004;
    margin-bottom: 8px;
  }
  
  .warmmy-feature-text {
    font-size: 13px;
    color: #3d2522;
    line-height: 1.4;
  }
  
  .warmmy-guarantee {
    background: white;
    border: 2px solid #f5b2b9;
    border-radius: 20px;
    padding: 40px;
    text-align: center;
    position: relative;
  }
  
  .warmmy-guarantee-seal {
    position: absolute;
    top: -30px;
    right: 30px;
    width: 80px;
    height: 80px;
    background: #f5b2b9;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: rotate(-15deg);
    box-shadow: 0 5px 20px rgba(245,178,185,0.3);
  }
  
  .warmmy-guarantee-seal svg {
    width: 40px;
    height: 40px;
    fill: white;
  }
  
  .warmmy-guarantee-title {
    font-size: 28px;
    font-weight: 600;
    color: #191004;
    margin-bottom: 15px;
  }
  
  .warmmy-guarantee-text {
    font-size: 16px;
    color: #3d2522;
    margin-bottom: 25px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .warmmy-guarantee-button {
    display: inline-block;
    background: #000;
    color: white;
    padding: 18px 40px;
    border-radius: 30px;
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .warmmy-guarantee-button:hover {
    background: #f5b2b9;
    transform: translateY(-2px);
  }
  
  @media (max-width: 768px) {
    .warmmy-solution {
      padding: 60px 0;
    }
    
    .warmmy-solution-title {
      font-size: 32px;
    }
    
    .warmmy-demo {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .warmmy-features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
    
    .warmmy-guarantee {
      padding: 30px 20px;
    }
  }
</style>

