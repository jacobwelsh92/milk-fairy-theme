<script>
  // Add to cart functionality
  function addToCart() {
    // Add product to cart via Shopify API
    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        id: {{ all_products['milk-fairy-portable-milk-warmer-bottle'].selected_or_first_available_variant.id | json }},
        quantity: 1
      })
    })
    .then(response => response.json())
    .then(data => {
      // Redirect to checkout or show cart drawer
      window.location.href = '/checkout';
    });
  }
  
  // Timer countdown
  (function() {
    const timer = document.querySelector('.warmmy-hero .timer-countdown');
    if (!timer) return;
    
    let minutes = 59;
    let seconds = 47;
    
    setInterval(() => {
      seconds--;
      if (seconds < 0) {
        seconds = 59;
        minutes--;
        if (minutes < 0) {
          minutes = 59;
        }
      }
      timer.textContent = `Offer ends in ${minutes}:${seconds.toString().padStart(2, '0')}`;
    }, 1000);
  })();
</script>

